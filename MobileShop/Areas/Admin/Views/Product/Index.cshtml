@model List<Model.ViewModel.ProductViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Success"]
    </div>

}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Error"]
    </div>
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Meta Title</th>
                        <th>Category Name</th>
                        <th>Image</th>
                        <th>Price</th>
                        <th>Promotion Price</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.MetaTitle</td>
                                <td>@item.CateName</td>
                                <td>
                                    <img style="width: 150px; height: 150px;" src="@item.Image" />
                                </td>
                                <td>@item.Price</td>
                                <td>@item.PromotionPrice</td>
                                <td>@item.Description</td>
                                <td>@(item.Status == true ? "Kích Hoạt" : "Khóa")</td>
                                <td>@item.CreatedDate</td>
                                <td style="display: flex">
                                    <a style="margin-right: 10px" href="/Admin/Product/Update/@item.ID" type="button" class="btn btn-success">Cập Nhật</a>
                                    <a onclick="return confirm('Bạn có chắc muốn xóa?')" href="/Admin/Product/Delete/@item.ID" type="button" class="btn btn-danger">Xóa</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

